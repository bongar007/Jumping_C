<h1 class="mt-4">Dashboard</h1>
<p class="lead mb-3">Welcome <%= user.name %></p>
<a href="/users/logout" class="btn btn-secondary">Logout</a>

<div id="canvas-container" class="container">
  <progress value="0" max="10" id="progressBar"></progress>
  <div class="container">
    <span class="best-score"><%= user.highScore %> </span><br />
    <span class="high-score"></span><br />
    <span class="current-score"></span>
    <div class="row">
      <!-- Token Authentication Block -->
      <div class="col-sm-6">
        <div class="well">
          <h3 class="text-warning">
            <span class="fa fa-cogs"></span> API Token
          </h3>
          <p>
            <% if (user.token) { %>
            <strong>Token</strong>: <%= user.token.value %><br />
            <% } else { %>
            <a href="/getToken" class="btn btn-warning">Get Token</a>
            <% } %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
